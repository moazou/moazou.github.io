  </div>  <script>
    let loginCount = 0;
    function login() {
      const username = document.getElementById('username').value.trim();
      const name = document.getElementById('name').value.trim();
      if (!name.includes("A1")) {
        document.getElementById('error').textContent = "Name must include 'A1'";
        return;
      }
      loginCount++;
      document.getElementById('loginCount').textContent = loginCount;
      document.getElementById('displayName').textContent = username;
      document.getElementById('shortName').textContent = name;
      document.getElementById('loginContainer').classList.add('hidden');
      document.getElementById('mainPage').classList.remove('hidden');
    }

    function showCompetitions() {
      alert("Competitions:\n- Sniping\n- Racing\n- Bikes\n- Battles\n- Stealth Missions\n- Capture the Base\n- Deathmatch\n- Teamwork Wars\n- Speed Runs\n- Tactical Challenges\n+ 2 Big Championships Coming Soon!");
    }

    function scrollToSection(id) {
      const el = document.getElementById(id);
      if (el) {
        el.scrollIntoView({ behavior: 'smooth' });
      }
    }
  </script></body>
